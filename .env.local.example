# Dyno Apps Environment Variables

# API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Modal (Required for sandboxes)
MODAL_TOKEN_ID=your_modal_token_id
MODAL_TOKEN_SECRET=your_modal_token_secret

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# App Configuration
NEXT_PUBLIC_APP_NAME=Dyno Apps
NEXT_PUBLIC_APP_URL=http://localhost:3000

# BAML
BAML_LOG=info
RUN_ESLINT_CHECK=false

# Trigger.dev (for background tasks)
TRIGGER_SECRET_KEY=tr_dev_xxx        # From Trigger.dev dashboard → Project → API Keys
TRIGGER_PROJECT_ID=proj_xxx          # From Trigger.dev dashboard → Project settings
NEXT_PUBLIC_TRIGGER_PUBLIC_KEY=pk_xxx # For frontend React hooks
USE_TRIGGER_DEV=false                # Set to "true" to use Trigger.dev instead of SSE

# Vercel (for syncing env vars to Trigger.dev)
VERCEL_ACCESS_TOKEN=                 # From https://vercel.com/account/settings/tokens
VERCEL_PROJECT_ID=                   # From Vercel project settings → General → Project ID
VERCEL_TEAM_ID=                      # Only for team projects: Team Settings → General

# Supabase Service Key (for background tasks - bypasses RLS)
SUPABASE_SECRET_KEY=sb_secret_xxx    # From Supabase dashboard → Settings → API → service_role key

RESEND_API_KEY=re_xxxxxxxxxxxx
FEEDBACK_EMAIL=your-email@domain.com
EMAIL_FROM=Dyno Apps <hello@yourdomain.com>  # Must be from a verified domain (https://resend.com/domains)

# Admin emails (comma-separated) - users who can access /admin
ADMIN_EMAILS=you@example.com,cofounder@example.com

# ClickHouse (Optional - for token usage analytics)
CLICKHOUSE_HOST=https://xxx.region.clickhouse.cloud:8443
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Credits System (Optional - defaults shown)
CREDIT_MARGIN_PERCENTAGE=100  # 100 = 2x markup on API cost (raw $1 → $2 marked up → 20 credits)
INITIAL_CREDITS=10            # Credits given to new users on first access

# Feature Flags
FEATURE_BUY_CREDITS=false  # Set to "true" to enable credit purchases (server-side only)

# Stripe (Required for credit purchases)
STRIPE_SECRET_KEY=sk_test_xxx           # From Stripe Dashboard → Developers → API keys
STRIPE_WEBHOOK_SECRET=whsec_xxx         # From Stripe Dashboard → Developers → Webhooks (or Stripe CLI)
STRIPE_PRICE_STARTER=price_xxx          # Price ID for $5/50 credits package
STRIPE_PRICE_POPULAR=price_xxx          # Price ID for $9/100 credits package
STRIPE_PRICE_PRO=price_xxx              # Price ID for $20/250 credits package
