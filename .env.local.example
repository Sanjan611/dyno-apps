# Dyno Apps Environment Variables

# API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Modal (Required for sandboxes)
MODAL_TOKEN_ID=your_modal_token_id
MODAL_TOKEN_SECRET=your_modal_token_secret

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# App Configuration
NEXT_PUBLIC_APP_NAME=Dyno Apps
NEXT_PUBLIC_APP_URL=http://localhost:3000

# BAML
BAML_LOG=info
RUN_ESLINT_CHECK=false

# Trigger.dev (for background tasks)
TRIGGER_SECRET_KEY=tr_dev_xxx        # From Trigger.dev dashboard → Project → API Keys
TRIGGER_PROJECT_ID=proj_xxx          # From Trigger.dev dashboard → Project settings
NEXT_PUBLIC_TRIGGER_PUBLIC_KEY=pk_xxx # For frontend React hooks
USE_TRIGGER_DEV=false                # Set to "true" to use Trigger.dev instead of SSE

# Supabase Service Key (for background tasks - bypasses RLS)
SUPABASE_SECRET_KEY=sb_secret_xxx    # From Supabase dashboard → Settings → API → service_role key

RESEND_API_KEY=re_xxxxxxxxxxxx
FEEDBACK_EMAIL=your-email@domain.com

# ClickHouse (Optional - for token usage analytics)
CLICKHOUSE_HOST=https://xxx.region.clickhouse.cloud:8443
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
